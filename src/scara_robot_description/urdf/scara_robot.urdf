<robot name="scara_robot">
    <link name="base_link">
        <visual>
        <geometry>
            <box size="0.20 0.20 0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <material name="red">
            <color rgba="1.0 0.0 0.0 0.5"/>
        </material>
        </visual>
    </link>

    <link name="link1">
        <visual>
        <geometry>
            <cylinder radius="0.06" length="0.34"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <material name="green">
            <color rgba="0.0 1 0.0 0.5"/>
        </material>
        </visual>
    </link>

    <joint name="base2link1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0.0 0.0 0.195" rpy="0.0 0.0 0.0"/>       
        <axis xyz="0.0 0.0 1"/>
        <limit lower="-3.14" upper="2.355" effort="0.45" velocity="0.5"/>
    </joint>

    <link name="link2">
        <visual>
        <geometry>
            <box size="0.3 0.07 0.05"/>
        </geometry>
        <origin xyz="0 0.0  0.0" rpy="0.0 0.0 0.0"/>
        <material name="blue">
            <color rgba="0.0 0.0 1 0.8"/>    
        </material>
        </visual>
    </link>

    <joint name="link1_to_lik2" type="prismatic">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0.15 0.0 0.03"/>
        <axis xyz="0.0 0.0 1"/>
        <limit lower="-0.16" upper="0.0" effort="0.45" velocity="0.5"/>
    </joint>

    <link name="link3">
        <visual>
            <geometry>
                <box size="0.2 0.07 0.05"/>
            </geometry>
            <origin xyz="0.08 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="yellow">
                <color rgba="0 1 0.5 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="link2_to_link3" type="revolute">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0.13 0.0 -0.05" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
        <limit lower="3.10" upper="-2.61" effort="0.45" velocity="0.5"/>
    </joint>

    <link name="gripper_base_link">
        <visual>
            <geometry>
                <box size="0.02 0.07 0.07"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="red">
                <color rgba="1 0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="gripper_base_link_to_link3" type="revolute">
        <parent link="link3"/>
        <child link="gripper_base_link"/>
        <origin xyz="0.15 0.0 -0.06" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-2.61" upper="2.61" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="gripper_left">
        <visual>
            <geometry>
                <box size="0.08 0.01 0.01"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="green">
                <color rgba="0.0 1 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="left_2_gripper_base" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_left"/>
        <origin xyz="0.05 0.03 -0.03" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0"/>
        <limit lower="-0.025" upper="0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="gripper_right">
        <visual>
            <geometry>
                <box size="0.08 0.01 0.01"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="blue">
                <color rgba="0.0 0 1 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="right_2_gripper_base" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_right"/>
        <origin xyz="0.05 -0.03 -0.03" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0"/>
        <limit lower="0" upper="0.025" effort="0.0" velocity="0.0"/>
    </joint>
</robot>